# Database (PostgreSQL only)
# PRISMA_DATABASE_URL: Prisma Accelerate connection string for queries
# Get from: Prisma Data Platform > Accelerate
# Note: This is automatically set by Vercel's Prisma Storage integration
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_ACCELERATE_API_KEY"

# POSTGRES_URL: Direct PostgreSQL connection for migrations
# Get from: Vercel Postgres dashboard or Prisma Data Platform
# Note: This is automatically set by Vercel's Prisma Storage integration
POSTGRES_URL="postgres://user:password@db.prisma.io:5432/postgres?sslmode=require"

# DATABASE_URL: Legacy variable (not used in schema.prisma)
# Kept for backward compatibility with Vercel's Prisma Storage integration
DATABASE_URL="postgres://user:password@db.prisma.io:5432/postgres?sslmode=require"

# Session Secret (use a long random string in production)
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-secret-key-here-change-this-in-production"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Dev-only auto admin seed on login
DEV_AUTO_SEED_ADMIN="true"
DEV_ADMIN_USERNAME="admin"
DEV_ADMIN_PASSWORD="password123"

# Google Drive API
# サービスアカウントのメールアドレス
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
# サービスアカウントの秘密鍵（\n はそのままコピー）
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# 画像を保存するGoogle DriveフォルダのID
GOOGLE_DRIVE_FOLDER_ID="your-folder-id"
