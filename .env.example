# Database (PostgreSQL only - Supabase)
# DATABASE_URL: Transaction pooler URL (port 6543)
# Get from: Supabase Dashboard > Settings > Database > Connection string > Transaction pooler
DATABASE_URL="postgres://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-ap-northeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# DIRECT_URL: Session pooler URL (port 5432) for migrations
# Get from: Supabase Dashboard > Settings > Database > Connection string > Session pooler
DIRECT_URL="postgres://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-ap-northeast-1.pooler.supabase.com:5432/postgres"

# Session Secret (use a long random string in production)
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-secret-key-here-change-this-in-production"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Dev-only auto admin seed on login
DEV_AUTO_SEED_ADMIN="true"
DEV_ADMIN_USERNAME="admin"
DEV_ADMIN_PASSWORD="password123"

# Google Drive API
# サービスアカウントのメールアドレス
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
# サービスアカウントの秘密鍵（\n はそのままコピー）
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# 画像を保存するGoogle DriveフォルダのID
GOOGLE_DRIVE_FOLDER_ID="your-folder-id"
